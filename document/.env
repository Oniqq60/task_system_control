# HTTP Server Port (default: 8082)
HTTP_PORT=8082

# gRPC Server Port (default: 9093)
GRPC_PORT=9093

# MongoDB Connection URI
# Example for local: mongodb://localhost:27017/
# Example for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017/

# MongoDB Database Name
MONGODB_DATABASE=taskdb

# MongoDB Collection Name
MONGODB_COLLECTION=documents

# MinIO Endpoint (hostname:port)
MINIO_ENDPOINT=localhost:9000

# MinIO Access Key
MINIO_ACCESS_KEY=minioadmin

# MinIO Secret Key
MINIO_SECRET_KEY=minioadmin

# MinIO Use SSL (true/false or 1/0)
# Set to true for production with HTTPS
MINIO_USE_SSL=false

# MinIO Bucket Name for storing documents
MINIO_BUCKET=documents

# JWT Secret Key (REQUIRED - minimum 32 characters for security)
# IMPORTANT: Use a strong, random secret in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production

# Redis Address (hostname:port)
# Leave empty if Redis is not used (token blacklist will be disabled)
REDIS_ADDR=localhost:6379

# Redis Password (leave empty if no password)
REDIS_PASSWORD=

# Maximum file size in bytes (default: 10485760 = 10MB)
# Examples:
#   10MB = 10485760
#   50MB = 52428800
#   100MB = 104857600
MAX_FILE_SIZE=10485760

# HTTPS Enabled (true/false or 1/0)
# Set to true in production when using HTTPS
HTTPS_ENABLED=false

# CORS Allowed Origins
# For development: use * (not recommended for production)
# For production: specify exact domain(s), e.g. https://example.com
# Multiple origins not supported in current implementation
CORS_ALLOWED_ORIGINS=*