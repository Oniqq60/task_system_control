					"raw": "{{base_url}}/task?worker_id={{worker_id}}&status=IN_PROGRESS",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"task"
					],
					"query": [
						{
							"key": "worker_id",
							"value": "{{worker_id}}"
						},
						{
							"key": "status",
							"value": "IN_PROGRESS"
						}
					]
				},
				"description": "Возвращает задачи с комбинированными фильтрами."
			},
			"response": []
		},
